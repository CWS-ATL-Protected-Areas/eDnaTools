	author = {Erickson, Richard A and Merkes, Christopher M and Mize, Erica L},
	month = sep,
	year = {2019},
	note = {Publisher: John Wiley \& Sons, Ltd},
	keywords = {Environmental DNA, Endangered species, Experimental design, Invasive species, Occupancy/occurrence models},
