	journal = {PLOS ONE},
	author = {Lam, Ivan P. Y. and Sung, Yik-Hei and Fong, Jonathan J.},
	month = feb,
	year = {2022},
	note = {Publisher: Public Library of Science},
	pages = {e0262015},
}

@article{xiong_methodology_2022,
